{
  "name": "server-reload",
  "version": "0.0.3",
  "description": "This is a little development server with live reload capability. Use it for compile your HTML/JavaScript/CSS files.",
  "keywords": [
    "front-end",
    "development",
    "tool",
    "server",
    "http",
    "cli"
  ],
  "author": "Tapio Vierros",
  "dependencies": {
    "chokidar": "^3.5.2",
    "colors": "latest",
    "connect": "^3.6.6",
    "cors": "latest",
    "event-stream": "3.3.4",
    "faye-websocket": "0.11.x",
    "http-auth": "3.1.x",
    "morgan": "^1.9.1",
    "object-assign": "latest",
    "opn": "latest",
    "proxy-middleware": "latest",
    "send": "latest",
    "serve-index": "^1.9.1"
  },
  "devDependencies": {
    "eslint": "^8.4.1",
    "jshint": "^2.9.6",
    "mocha": "^9.1.3",
    "supertest": "^3.3.0"
  },
  "scripts": {
    "lint": "eslint server-reloadjs index.js",
    "hint": "jshint server-reload.js index.js",
    "test": "mocha test --exit && npm run lint"
  },
  "bin": {
    "server-reload": "server-reload.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yuanliang/server-reload.git"
  },
  "engines": {
    "node": ">=0.10.0"
  },
  "preferGlobal": true,
  "license": "MIT",
  "eslintConfig": {
    "env": {
      "node": true
    },
    "rules": {
      "quotes": 0,
      "curly": 0,
      "strict": 0,
      "no-process-exit": 0,
      "eqeqeq": 1,
      "no-unused-vars": 1,
      "no-shadow": 1
    }
  },
  "bugs": {
    "url": "https://github.com/yuanliang/server-reload/issues"
  },
  "homepage": "https://github.com/yuanliang/server-reload#readme",
  "main": "index.js",
  "directories": {
    "test": "test"
  }
}
